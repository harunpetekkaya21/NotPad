<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    private String noteTitle;
    private String noteDescription;
    private String noteCategory;
    private byte[] noteImage;

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/dialogNoteTitle_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Note Title"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/dialogNoteDescription_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Note Description"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

        </TextView>

        <ImageView
            android:id="@+id/dialogNoteImg_id"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@color/colorAccent"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"></ImageView>
        <TextView
            android:id="@+id/dialogNoteCategory_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Note Category"
            android:textColor="#CF400C"
            android:layout_marginRight="120dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp">

        </TextView>

        <Button
            android:id="@+id/dialog_buttonEsc_id"
            android:padding="20dp"

            android:drawablePadding="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="ESC"
            android:layout_marginTop="10dp"
            android:layout_gravity="start">

        </Button>



    </LinearLayout>


</RelativeLayout>